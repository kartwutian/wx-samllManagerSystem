.search-result{
  background-color: #f8f8f8;
}
.search-item{
  position: relative;
  padding: 0 15px;
  font-size: 14px;
  height: 40px;
  line-height: 40px;
}
.search-item:after{
  position: absolute;
  content: '';
  bottom: 0;
  left: 15px;
  right: 15px;
  height: 1px;
  background-color: #ececec;
  transform: scaleY(0.5);
}