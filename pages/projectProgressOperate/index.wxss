.pretty-textarea{
  box-sizing: border-box;
  padding: 10px 15px;
  width: 100%;
  font-size: 15px;
  min-height: 100px;
}

.fix--bottom{
  margin-bottom: 50px;
}
.fixed-bottom{
  position: fixed;
  bottom:0;
  width: 100%;
  z-index:100;
}
.img-area{
  padding: 10px 15px;
}
.uploader__input-box{
  width: 75px;
  height: 75px;
  border: 1px solid #ececec;
}
.uploader__input{
  width: 100%;
  height: 100%;
  position: relative;
}
.uploader__input:before{
  position: absolute;
  content: '';
  left: 50%;
  transform: translateX(-50%);
  top: 15px;
  bottom: 15px;
  width: 2px;
  background-color: #ececec;
}

.uploader__input:after{
  position: absolute;
  content: '';
  top: 50%;
  transform: translateY(-50%);
  left: 15px;
  right: 15px;
  height: 2px;
  background-color: #ececec;
}